<p id="notice"><%= notice %></p>

<h1>Events</h1>

  <h3>Future Events</h3>
<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Time</th>
      <th>Location</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @future.each do |event| %>
      <tr>
        <td><%= event.user_id %></td>
        <td><%= event.time %></td>
        <td><%= event.location %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <% if current_user && current_user.id == event.user_id %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
    </table>


    <h3>Past Events</h3>
    <table>
      <thead>
        <tr>
          <th>Host</th>
          <th>Time</th>
          <th>Location</th>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @past.each do |event| %>
          <tr>
            <td><%= event.user_id %></td>
            <td><%= event.time %></td>
            <td><%= event.location %></td>
            <td><%= event.title %></td>
