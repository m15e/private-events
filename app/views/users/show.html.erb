<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Events Created:</strong>
</p>

<table>
<thead>
  <tr>
    <th>Location</th>
    <th>Time</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @user.events.each do |event| %>
    <tr>
      <% if event.user_id == @user.id %>
      <td><%= event.location %></td>
      <td><%= event.time %></td>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
</table>


<p>
  <strong>Events Attending:</strong>
</p>


  <p><strong>Upcoming Events</strong></p>
  <% @invites.each do |invite| %>
  <% if invite.user.id == @user.id %>
  <% if invite.event.time >= DateTime.now %>  
    <%= invite.event.title %>
    <%= invite.event.time %>
  <% end %>
  <% end %> <!-- ends if invite.user.id -->
  <% end %> <!-- ends @invites.each -->
  <p><strong>Past Events</strong></p>
  <% @invites.each do |invite| %>
  <% if invite.user.id == @user.id %>
  <% if invite.event.time < DateTime.now %>  
    <%= invite.event.title %>
    <%= invite.event.time %>
  <% end %>
  <% end %> <!-- ends if invite.user.id -->
  <% end %> <!-- ends @invites.each -->
<br>

<br>





<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
